void do_drop()
{
        object *inv, *invofusr;
        int i, m;

        inv = all_inventory(this_object());
        for( i = 0; i < sizeof(inv); i++ ) {
                if( userp(inv[i]) ) {
                        inv[i]->unconcious();
                        invofusr = all_inventory(inv[i]);
                        for(m = 0; m < sizeof(invofusr); m++)
                                destruct(invofusr[m]);
                        if( random(8) == 1 )
                                inv[i]->move("/d/taohua/haitan");
                        else    inv[i]->move("/d/taohua/zhoushan");
                        message("vision",
                        "ƒ„∑¢œ÷“ª∏ˆªÎ…ÌÀÆ¡‹¡‹µƒº“ªÔ±ª∫£ÀÆ≥Â…œ∞∂¿¥£¨≤ª”…µ√◊ﬂΩ¸“ªø¥£¨‘≠¿¥ «"+query("name", inv[i])+"°£\n",environment(inv[i]),({inv[i]}));
                } else  destruct(inv[i]);
        }

        delete_temp("navigate");
        delete_temp("trigger");
}

